@{
    ViewData["Title"] = "Projects";
}
<script src="~/js/project.js"></script>
<div class="indexTable">
    <div class="buttonsLogOutAndPlus">
        <button id="myBtn" type="button" class="glyphicon btn btn-default btn-sm">+</button>
    </div>
    <table cellspacing='0'>
        <thead><tr><th>Name</th><th>Start Date</th><th>Complete Date</th><th>Status</th><th></th></tr></thead>
        <tbody id="tbodyid">
        </tbody>
    </table>
</div>
<!-- The Modal -->
<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <div class="modal-header">
            <span class="close">&times;</span>
            <h2>Add new project</h2>
        </div>
        <div class="modal-body">
            <form name="projectForm">
                <div class="form-group col-md-5">
                    <input placeholder="Project Name" class="form-control" name="name" required oninvalid="this.setCustomValidity('Please fill out this field.')" oninput="setCustomValidity('')" />
                </div>
                <div class="form-group col-md-5">
                    <input type="number" placeholder="Priority" class="form-control" name="priority" />
                </div>
                <div class="panel-body">
                    <button type="submit" id="submit" class="btn btn-primary">Create project</button>
                </div>
                <script src="~/js/sendProject.js"></script>
            </form>
        </div>
    </div>
</div>
<script src="~/js/modal.js"></script>