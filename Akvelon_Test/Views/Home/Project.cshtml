@{
    ViewData["Title"] = "Tasks";
}
<div class="indexTable">
    <form name="projectForm">
        <div class="form-group col-md-5">
            <input id="name" placeholder="Project Name" class="form-control" name="name" required oninvalid="this.setCustomValidity('Please fill out this field.')" oninput="setCustomValidity('')" />
        </div>
        <div class="form-group col-md-5">
            <input id="priority" type="number" placeholder="Priority" class="form-control" name="priority" />
        </div>
        <div class="form-group col-md-5">
            <select id="status" size="1" name="status" required>
                <option value="0">Not Started</option>
                <option value="1">Active</option>
                <option value="2">Complete</option>
            </select>
        </div>
        <div class="panel-body">
            <button type="submit" id="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
    <div class="buttonsLogOutAndPlus">
        <button id="myBtn" type="button" class="glyphicon btn btn-default btn-sm">+</button>
    </div>
    <table cellspacing='0'>
        <thead><tr><th>Task</th><th>Status</th><th>Description</th><th></th></tr></thead>
        <tbody id="tbodyid">
        </tbody>
    </table>
</div>
<script src="~/js/task.js"></script>
<!-- The Modal -->
<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <div class="modal-header">
            <span class="close">&times;</span>
            <h2>Add new task</h2>
        </div>
        <div class="modal-body">
            <form name="taskForm">
                <div class="form-group col-md-5">
                    <input placeholder="TaskName" class="form-control" name="name" required oninvalid="this.setCustomValidity('Please fill out this field.')" oninput="setCustomValidity('')" />
                </div>
                <div class="form-group col-md-5">
                    <input placeholder="Description" class="form-control" name="description" />
                </div>
                <div class="form-group col-md-5">
                    <input type="number" placeholder="Priority" class="form-control" name="priority" />
                </div>
                <div class="panel-body">
                    <button type="submit" id="submit" class="btn btn-primary">Create task</button>
                </div>
                <script src="~/js/sendTask.js"></script>
            </form>
        </div>
    </div>
</div>

<div id="putModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <div class="modal-header">
            <span class="putClose">&times;</span>
            <h2>Update task</h2>
        </div>
        <div class="modal-body">
            <form name="taskPutForm">
                <div class="form-group col-md-5">
                    <input placeholder="TaskName" class="form-control" name="name" required oninvalid="this.setCustomValidity('Please fill out this field.')" oninput="setCustomValidity('')" />
                </div>
                <div class="form-group col-md-5">
                    <select id="status" size="1" name="status" required>
                        <option value="0">To Do</option>
                        <option value="1">In Progress</option>
                        <option value="2">Done</option>
                    </select>
                </div>
                <div class="form-group col-md-5">
                    <input placeholder="Description" class="form-control" name="description" />
                </div>
                <div class="form-group col-md-5">
                    <input type="number" placeholder="Priority" class="form-control" name="priority" />
                </div>
                <div class="panel-body">
                    <button type="submit" id="submit" class="btn btn-primary">Update task</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/js/modal.js"></script>